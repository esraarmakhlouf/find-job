@model IEnumerable < WebApplication2.Models.ApplicationUser >

@{
    ViewBag.Title = "Useres";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<h2>المستخدمين</h2>

<p>
    @Html.ActionLink("انشاء مسخدم جديد", "../Account/Register")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.userPictur)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <img src="~/Uploads/@Html.DisplayFor(modelItem => item.userPictur)"
                 class="thumbnail" style="width:70px;height:70px" />
        </td>
        <td>
            @Html.ActionLink("تفاصيل", "Details", new { id=item.Id }) |
            @Html.ActionLink("حذف", "DeleteUser", new { id=item.Id })
        </td>
    </tr>
}

</table>
