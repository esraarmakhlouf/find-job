@model IEnumerable<find_job.Models.category>
   
@{
    ViewBag.Title = "Home Page";
}
  <!--clspan-->
<div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin:-60px -40px 0px -20px;">
    <!-- Indicators -->

    <ol class="carousel-indicators hidden-xs">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->

    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/people-coffee-notes-tea.jpg" alt="Los Angeles">
        </div>

        <div class="item">
            <img src="~/images/pexels-photo-273691.jpeg" alt="Chicago" >
        </div>

        <div class="item">
            <img src="~/images/pexels-photo-518244.jpeg" alt="New york" >
        </div>
    </div>
   

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
   
</div>


<!--nd-->


<div  style="text-align:center;">
    <h1 style="margin-top:30px; color:#43716a"  >مرحبا بك ايها الزائر</h1>
    <p> مرحبا بك في فضاء البحث علي الوظائف , تسطيع ناشر الوظائف او البحث عن وظيفة </p>
    
</div>

    @foreach (var item in Model)
    {

        <div class="row" style="margin-right:5%">
            @foreach (var subItem in item.Jobs)
            {

            <div class="panel panel-info col-md-10" style="padding-right: 0;padding-left: 0;">
                <div class="col-md-8">
                    <h2 class="panel-heading" style="padding:0 0 0 0;">@Html.DisplayFor(modelItem => subItem.jopTitle)</h2>
                    <h5 style=" padding:0 15px 0 0; color:#43716a"><i class="fa fa-user" aria-hidden="true" style="direction:rtl"></i> @Html.DisplayFor(modelItem => subItem.user.UserName)</h5>
                    <h5 style=" padding:0 15px 0 0; color:#43716a"> <i class="fa fa-clock-o" aria-hidden="true" style="direction:rtl"></i>@Html.DisplayFor(modelItem => subItem.jobDate)</h5>
                    <h4 class="panel panel-body panel-block " style=" padding-top: 0px;    padding-left: 0px;   padding-right: 20px;">@Html.DisplayFor(modelItem => item.categoryName)</h4>
                    <h4 class="panel panel-body" style=" padding-top: 0px;    padding-left: 0px;   padding-right: 20px;">@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => subItem.jopContent).ToString()))</h4>

                    @Html.ActionLink("التفاصيل", "Details", new { id = subItem.id }, new { @class = "btn btn-info btn-block" })
                </div>

                <div class="col-md-4" style="margin-top: 6px; padding: initial">
                    <div class="thumbnail">
                        <img src="~/Uploads/@subItem.jopImage" style="width:291px; height:200px" />
                    </div>
                </div>
            </div>

            }

        </div>
    }
  





