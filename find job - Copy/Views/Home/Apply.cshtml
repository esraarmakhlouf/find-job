
@{
    ViewBag.Title = "Apply";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<h2>التقدم للوظيفة</h2>

@using (Html.BeginForm("Apply", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div>
        @{
            if (ViewBag.Result == " تم التقدم للوظيفة بنجاح")
            {
                <div class="alert alert-success">
                    <span >
                      @ViewBag.Result
                    </span>
                </div>
            }
            if (ViewBag.Result == "عذرا قد سبق وان تقدمت لهذ الوظيفة من قبل ")
            {
               
                    <div class="alert alert-danger" id="error-div" >
                        <span id="view-err">
                            عذرا قد سبق وان تقدمت لهذ الوظيفة من قبل 
                        </span>
                    </div>
                
            }
            }
    </div>
    
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.Label("السيرة الذتية", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="Upload" />
                @Html.ValidationMessage("userCV", "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Message", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Message", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Message", "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="تاكيد" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
